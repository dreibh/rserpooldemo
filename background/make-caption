if [ $# -lt 3 ] ; then
   echo >&2 "Usage: $0 output_file caption width"
   exit 1
fi
OUTPUT="$1"
if [ ! -e "$2" ] ; then
   echo >&2 "ERROR: Caption file $2 does not exist!"
   exit 1
fi
CAPTION="`cat "$2"`"
WIDTH="$3"

convert -size ${WIDTH}x42 xc:transparent \
   \( -background Gold -fill "#02266b" \
      -font Helvetica-Bold -pointsize 24 \
      -gravity center \
      label:"$CAPTION"  \) -composite \
   "${OUTPUT}"

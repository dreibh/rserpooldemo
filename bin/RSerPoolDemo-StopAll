#!/bin/bash

if [ $# -lt 1 ] ; then
   echo >&2 "Usage: RSerPoolDemo-Killall [stop|kill]"
   exit 1
fi


if [ "x$1" = "xstop" ] ; then
   command=stopall
elif [ "x$1" = "xkill" ] ; then
   command=killall
else
   echo >&2 "ERROR: Bad command $1!"
   exit 1
fi


./ComponentControl ./RSerPoolDemo-PU.config 0 killall
./ComponentControl ./RSerPoolDemo-PE.config 0 $command
./ComponentControl ./RSerPoolDemo-PR.config 0 $command

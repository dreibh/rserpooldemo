if [ $# -lt 1 ] ; then
   echo >&2 "Usage: RunProgram [Program] {Arguments ...}"
   exit 1
fi

RP_PROGRAM=$1
shift
RP_MISCARGS=$@


echo "Launching $RP_PROGRAM $RP_MISCARGS ..."
sh -c "$RP_PROGRAM $RP_MISCARGS &"
echo "Done"
